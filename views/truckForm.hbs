<form class="truck-form">

  <div class="container">
    {{#if truck}}
    <input type="text" name="id" hidden value="{{truck.id}}" >
    {{/if}}
    <input type="text" name="make" placeholder="Ingresa la marca" required value="{{truck.make}}">

    <input type="text" name="model" placeholder="Modelo" required value="{{truck.model}}">

    <input type="number" name="year" placeholder="AÃ±o" required value="{{truck.year}}">

    <input type="text" name="vin" placeholder="Vin" required value="{{truck.vin}}">

    <input type="text" name="plate" placeholder="Placa" required value="{{truck.plate}}">

    <input type="text" name="number" placeholder="Numero"  required value="{{truck.number}}">

    <button class="sign-btn" type="submit">
      {{#if truck}}Actualizar camion {{else}} Crear camion {{/if}}
    </button>
  </div>

  <div class="container" style="background-color:#f1f1f1">
    <button type="button" class="cancelbtn">Cancel</button>
  </div>
</form>

<script src="/javascript/truck-form.js"></script>

