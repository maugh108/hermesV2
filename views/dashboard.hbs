{{#if orders.length}}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12 mx-5 justify-content-center" style="height:90vh">
            <button type="button" class="btn btn-success"  onclick="Create()">Crear nueva Orden</button>
            <table class="table table-dark">
                <thead>
                    <tr>
                    <th scope="col">Orden Id</th>
                    <th scope="col">Conductor</th>
                    <th scope="col">Teléfono</th>
                    <th scope="col">Camión</th>
                    <th scope="col">Trailer</th>
                    <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each orders as |order|}}
                    <tr>
                        <td scope="row">{{id}}</th>
                        <td>{{order.driver.name}}</td>
                        <td>{{order.driver.phone}}</td>
                        <td>{{order.truck.number}}</td>
                        <td>{{order.trailer.number}}</td>
                        <td>
                            <button type="button" class="btn btn-primary" id="{{order.id}}" onclick="Editar({{order.id}})">Editar</button>
                            <button type="button" class="btn btn-danger" onclick="Borrar({{order.id}})">Borrar</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                </table>
        </div>
    </div>
</div>
{{/if}}

<script src="/javascript/orders.js"></script>