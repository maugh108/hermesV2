{{#if orders.length}}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-4 px-5 justify-content-center" style="height: 90vh;">
            <div class="bg-primary  h-100 text-center">
                <h1 class="text-white ">Ordenes</h1>
                {{#each orders as |order|}}
                <div class="card mx-5" >
                    <div class="card-body">
                        <h5 class="card-title">{{driver.name}}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{driver.phone}}</h6>
                        <p class="card-text">{{driver.license}}</p>
                        <p class="card-text">{{driver.city}}</p>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
{{/if}}
